{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@khalistra/game-engine": ["modules/game-engine/src/index.ts"],
      "@khalistra/game-engine/*": ["modules/game-engine/src/*"],
      "@khalistra/modules/*": ["modules/*"],
      "@khalistra/shared/*": ["shared/*"]
    }
  }
}
