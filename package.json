{
  "name": "khalistra",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "workspaces": [
    "apps/*",
    "modules/*",
    "shared/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "infra:up": "docker compose --env-file .env.docker up -d",
    "infra:down": "docker compose --env-file .env.docker down -v"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "turbo": "^2.6.0"
  }
}
